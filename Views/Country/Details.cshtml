@model CoreLayout.Models.Masters.CountryModel
@{
    ViewData["Title"] = "Details";
}
<body style="padding: 30px 30px 30px 30px">
    <h2 class="text-info">Country Details</h2>
    <form asp-action="Details" method="post">
        <div class="pd-4 rounded border">
            <input type="hidden" asp-for="CountryId" />
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="CountryName"> </label>
                </div>
                <div class="col-5">
                    <input asp-for="CountryName" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="CountryStatus"> </label>
                </div>
                <div class="col-5">
                    <input asp-for="CountryStatus" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="CountryStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@Model.CountryId" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </form>
    </body>

