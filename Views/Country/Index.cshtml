@using CoreLayout.Models.Masters
@model IEnumerable<CountryModel>
@{
    ViewData["title"] = "Index";
}
<body style="padding: 30px 30px 30px 30px">
    <div class="row">
        @*<div>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Country Form</li>
            </ol>
        </div>*@
        <div class="text-right">
            <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Country</a>
            @*@if (System.Security.Claims.ClaimTypes.Role == "Admin")
        {

        }
        else
        {
            <a asp-action="Create" class="btn btn-info" style="pointer-events:none"><i class="fas fa-plus"></i>&nbsp; New Country</a>
        }*@

        </div>
    </div>
    <br />

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Country List
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>
                            @Html.DisplayNameFor(c => c.CountryName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(c => c.CountryStatus)
                        </th>
                        <th>
                            @Html.DisplayNameFor(c => c.CreatedBy)
                        </th>
                        <th>
                            @Html.DisplayNameFor(c => c.CreatedDate)
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>S.No</th>
                        <th>
                            @Html.DisplayNameFor(c => c.CountryName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(c => c.CountryStatus)
                        </th>
                        <th>
                            @Html.DisplayNameFor(c => c.CreatedBy)
                        </th>
                        <th>
                            @Html.DisplayNameFor(c => c.CreatedDate)
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </tfoot>
                <tbody>
                    @{
                        int sno = 0;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @{ sno++; }
                                @sno
                            </td>
                            <td>@item.CountryName</td>
                            <td>@item.CountryStatus</td>
                            <td>@item.CreatedBy</td>
                            <td>@item.CreatedDate</td>
                            <td>
                                <a asp-action="Edit" class="btn btn-primary" asp-route-id=@item.CountryId><i class="far fa-edit"></i></a>
                                <a asp-action="Details" class="btn btn-success" asp-route-id=@item.CountryId><i class="fas fa-list"></i></a>
                                <a asp-action="Delete" class="btn btn-danger" asp-route-id=@item.CountryId><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>

    @section Scripts{
<script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
<script type="text/javascript">
    $(function () {
        var save = '@TempData["success"]'
        if (save != '') {
            alertify.success(save)
        }
    })
</script>
<script type="text/javascript">
    $(function () {
        var error = '@TempData["error"]'
        if (error != '') {
            alertify.error(error);
        }
    })
</script>


    }
