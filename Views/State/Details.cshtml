@model CoreLayout.Models.Masters.StateModel
@{
    ViewData["Title"] = "Details";
}
<body>
    <div  style="padding: 30px 30px 30px 30px">
        <h2 class="text-info">State Details</h2>
        <form asp-action="Details" method="post">
            <div class="pd-4 rounded border">
                <input type="hidden" asp-for="StateId" />
                <div asp-validation-summary="ModelOnly" class="text-danger">

                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="CountryName"> </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="CountryName" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="CountryName" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="StateName"> </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="StateName" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="StateName" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Status"> </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Status" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-action="Edit" asp-route-id="@Model.StateId" class="btn btn-primary">Edit</a>
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </div>
        </form>
    </div>
    </body>

