@model CoreLayout.Models.UserManagement.SubMenuModel
@{
    ViewData["Title"] = "Create";
}
<body >
    <div style="padding: 30px 30px 30px 30px">
        <h2 class="text-info">Create Sub Menu</h2>

        <form asp-action="Create" method="post">
            <div class="pd-4 rounded border">
                <div asp-validation-summary="ModelOnly" class="text-danger">

                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ParentMenuId"> </label>
                    </div>
                    <div class="col-5">
                        <select asp-for="ParentMenuId"
                                class="form-control"
                                asp-items="@(new SelectList(ViewBag.ParentMenuList,"Value", "Text"))">
                        </select>
                        <span asp-validation-for="ParentMenuId" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="SubMenuName"> </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="SubMenuName" class="form-control" />
                        <span asp-validation-for="SubMenuName" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Save" />
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </div>

        </form>
    </div>
</body>
