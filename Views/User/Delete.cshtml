@model CoreLayout.Models.UserManagement.RegistrationModel
@{
    ViewData["Title"] = "Delete";
}
<br />
<h2 class="text-info">Delete User</h2>
<form asp-action="Delete" method="get">
    <div class="pd-4 rounded border">
        <input type="hidden" asp-for="UserID" />
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserName"> </label>
            </div>
            <div class="col-5">
                <input asp-for="UserName" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LoginID"> </label>
            </div>
            <div class="col-5">
                <input asp-for="LoginID" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="LoginID" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MobileNo"> </label>
            </div>
            <div class="col-5">
                <input asp-for="MobileNo" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="MobileNo" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="EmailID"> </label>
            </div>
            <div class="col-5">
                <input asp-for="EmailID" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="EmailID" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserName"> </label>
            </div>
            <div class="col-5">
                <input asp-for="UserName" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IsUserActive"> </label>
            </div>
            <div class="col-5">
                <input asp-for="IsUserActive" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="IsUserActive" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RoleName"> </label>
            </div>
            <div class="col-5">
                <input asp-for="RoleName" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" asp-route-id="@Model.UserID" class="btn btn-danger" value="Delete" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
