@model CoreLayout.Models.UserManagement.AssignMenuByUserModel
@{
    ViewData["Title"] = "Details";
}
<body>
    <div style="padding: 30px 30px 30px 30px">
        <h2 class="text-info">Assign Menu To User Details</h2>
        <form asp-action="Details" method="post">
            <div class="pd-4 rounded border">
                <input type="hidden" asp-for="MenuPermissionId" />
                <div asp-validation-summary="ModelOnly" class="text-danger">

                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="MenuName"> </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="MenuName" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="MenuName" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="UserName"> </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="UserName" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Active"> </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Active" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="Active" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-action="Edit" asp-route-id="@Model.MenuPermissionId" class="btn btn-primary">Edit</a>
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </div>
        </form>
        </div>
</body>

