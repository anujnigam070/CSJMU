@model CoreLayout.Models.Masters.RoleModel
@{
    ViewData["Title"] = "Details";
}
<body>
    <div style="padding: 30px 30px 30px 30px">
        <h2 class="text-info">Role Details</h2>
        <form asp-action="Details" method="post">
            <div class="pd-4 rounded border">
                <input type="hidden" asp-for="RoleID" />
                <div asp-validation-summary="ModelOnly" class="text-danger">

                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="RoleName"> </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="RoleName" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Description"> </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Description" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-action="Edit" asp-route-id="@Model.RoleID" class="btn btn-primary">Edit</a>
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </div>
        </form>
        </div>
</body>

