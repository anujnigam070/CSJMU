@model CoreLayout.Models.UserManagement.SubMenuModel
@{
    ViewData["Title"] = "Edit";
}
<body>
    <div style="padding: 30px 30px 30px 30px">
        <h2 class="text-info">Edit Sub Menu</h2>
        <form asp-action="Edit" method="post">
            <div class="pd-4 rounded border">
                <input type="hidden" asp-for="SubMenuId" />
                <div asp-validation-summary="ModelOnly" class="text-danger">

                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="ParentMenuId"> </label>
                        </div>
                        <div class="col-5">
                            <select asp-for="ParentMenuId"
                                    class="form-control"
                                    asp-items="@(new SelectList(ViewBag.ParentMenuList,"Value", "Text"))">
                            </select>
                            <span asp-validation-for="ParentMenuId" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="SubMenuName"> </label>
                        </div>
                        <div class="col-5">
                            <input asp-for="SubMenuName" class="form-control" />
                            <span asp-validation-for="SubMenuName" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group">
                        <input type="submit" asp-route-id="@Model.SubMenuId" class="btn btn-primary" value="Update" />
                        <a asp-action="Index" class="btn btn-success">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
    </body>
