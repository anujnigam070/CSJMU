@model CoreLayout.Models.Masters.CityModel
@{
    ViewData["Title"] = "Edit";
}
<body style="padding: 30px 30px 30px 30px">
    <h2 class="text-info">Edit City</h2>
    <form asp-action="Edit" method="post">
        <div class="pd-4 rounded border">
            <input type="hidden" asp-for="CityId" />
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="CountryId"> </label>
                </div>
                <div class="col-5">
                    <select asp-for="CountryId"
                            class="form-control"
                            asp-items="@(new SelectList(ViewBag.countryList,"Value", "Text"))">
                    </select>
                    <span asp-validation-for="CountryId" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="StateId"> </label>
                </div>
                <div class="col-5">
                    <select asp-for="StateId"
                            class="form-control"
                            asp-items="@(new SelectList(ViewBag.StateList,"Value", "Text"))">
                    </select>
                    <span asp-validation-for="StateId" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="CityName"> </label>
                </div>
                <div class="col-5">
                    <input asp-for="CityName" class="form-control" />
                    <span asp-validation-for="CityName" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Status"> </label>
                </div>
                <div class="col-5">
                    @Html.DropDownList("Status", new List<SelectListItem>
                    {
                         new SelectListItem{ Text="Active", Value = "Active" },
                         new SelectListItem{ Text="InActive", Value = "InActive" },

                    })
                </div>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" asp-route-id="@Model.CityId" class="btn btn-primary" value="Update" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </form>
    </body>
